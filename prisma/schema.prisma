generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  description String?
  ingredients String[]
  steps       String[]
  image       String?

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  // Relationship
  createdBy String //TODO: Modificar después para hacer la relación con el ID del usuario
}

