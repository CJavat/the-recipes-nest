generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  description String?
  ingredients String[]
  steps       String[]
  image       String?

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  //* Relationship
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  isActive  Boolean @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  //* Relationship
  recipes Recipe[]
}

